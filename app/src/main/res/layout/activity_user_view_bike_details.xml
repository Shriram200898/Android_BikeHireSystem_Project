<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/dash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AFDFF4"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="62dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="false"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:id="@+id/imgcp6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/user1" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/cpname6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#0B395E"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/cpemail6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cpname6"
                    android:layout_marginTop="5dp"
                    android:textColor="#0B395E"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <SearchView
                    android:id="@+id/searchbike"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_roundborder"
                    android:inputType="text" />

            <TextView
                android:id="@+id/txtproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchbike"
                android:layout_marginTop="6dp"
                android:background="#91C1E8"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:padding="10dp"
                android:text="View Bike"
                android:textSize="18sp"
                android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtproduct"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:padding="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp">


                    <ImageView
                        android:id="@+id/bike_img"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/bike_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="180dp"
                        android:gravity="center_horizontal"
                        android:text="bgirtbt"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/bike_companyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="210dp"
                        android:gravity="center_horizontal"
                        android:text="ksrtbhskrt"
                        android:textColor="#FFC107"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bike_regno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="240dp"
                        android:text="khtkern"
                        android:textColor="#0A5D9F"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="290dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="#EDF7F8"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:text="Bike Rent"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="60dp"
                            android:text="Hourly"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="60dp"
                            android:text="Daily"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="250dp"
                            android:layout_marginTop="60dp"
                            android:text="Weekly"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/bike_hourrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="90dp"
                            android:text="Hourly"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bike_dayrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="90dp"
                            android:text="Daily"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bike_weekrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="230dp"
                            android:layout_marginTop="90dp"
                            android:text="Weekly"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/bike_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="20dp"
                            android:text="Deposit"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="490dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/viewmileage" />

                        <TextView
                            android:id="@+id/bike_mileage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="25dp"
                            android:text="bgirtbt"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="80dp"
                            app:srcCompat="@drawable/viewsetting" />

                        <TextView
                            android:id="@+id/bike_engine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="85dp"
                            android:text="bgirtbt"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="20dp"
                            app:srcCompat="@drawable/viewstart" />

                        <TextView
                            android:id="@+id/bike_starttype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="220dp"
                            android:layout_marginTop="25dp"
                            android:text="bgirtbt"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="80dp"
                            app:srcCompat="@drawable/viewbike" />

                        <TextView
                            android:id="@+id/bike_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="220dp"
                            android:layout_marginTop="85dp"
                            android:text="bgirtbt"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="140dp"
                            android:layout_marginBottom="20dp"
                            app:srcCompat="@drawable/viewfuel" />

                        <TextView
                            android:id="@+id/bike_fueltype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="145dp"
                            android:text="bgirtbt"
                            android:textColor="#6f6f6f"
                            android:textSize="18sp" />


                    </androidx.cardview.widget.CardView>


                    <Button
                        android:id="@+id/viewRCImg"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="720dp"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="#DFAA2D"
                        android:text="View RC Document"
                        android:textColor="#fff" />

                    <ImageView
                        android:id="@+id/view_bikerc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="790dp"
                        android:layout_marginBottom="30dp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/card2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:text="Terms and Conditions :"
                        android:textColor="#6f6f6f"
                        android:textSize="20sp" />


                    <TextView
                        android:id="@+id/termsandconditions"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="40dp"
                        android:padding="20dp" />

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/bike_book"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/card3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="60dp"
                    android:background="#5B879A"
                    android:text="Book Bike"
                    android:textColor="#fff"
                    app:backgroundTint="#5B879A" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>

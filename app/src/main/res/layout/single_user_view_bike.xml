<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:padding="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/b_img"
                    android:layout_alignParentRight="false"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:textColor="#43A047"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/b_img"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_below="@id/status"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b_img"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:textColor="#6f6f6f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/b_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:textColor="#FFC107"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/b_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b_company"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textColor="#0A5D9F"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/b_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b_rent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:textColor="#0A5D9F"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/b_deposit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="#FFC107"
                    android:gravity="center_horizontal"
                    android:paddingTop="6dp"
                    android:text="Rent"
                    android:textColor="@color/white"
                    app:backgroundTint="#FFC107" />


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TableRow>

        <TextView
            android:id="@+id/comp_bookingdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <TextView android:layout_weight="5" />

        <TextView
            android:id="@+id/comp_bookingid"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:textSize="14sp" />

    </TableRow>

    <RelativeLayout
        android:id="@+id/continuebooking1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/viewbike_img"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/viewbooking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/viewbike_img"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:textColor="#43A047"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comp_bikename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewbooking_status"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/comp_customername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_bikename"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comp_customerphno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_customername"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comp_journeydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_customerphno"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comp_returndate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_journeydate"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/comp_bookingamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comp_returndate"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/viewbike_img"
            android:includeFontPadding="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/comp_viewfeedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/comp_bookingamount"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="View Feedback"
            android:textColor="@color/white"
            app:backgroundTint="#FFC107" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:background="#000000" />

</TableLayout>